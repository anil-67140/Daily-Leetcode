package testingArrays;

public class Palindrome {
	
	    public static boolean isPalindrome(int x) {
	    	
	    	int digit =0;
	    	int rev = 0;
	    	int temp = x;
	    	if(x<0) {
	    		return false;
	    	}
	   	
	    	while(x != 0) {
	    		digit = x%10;
	    		 rev = rev *10 + digit; 
	    	     x /=10;
	    		
	    	}
	    	
	    	return temp == rev;
	        
	    }
	    public static void main(String[] args) {
			boolean ans = isPalindrome(121);
			System.out.println(ans);
		}
	
}
